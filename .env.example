# Project Directories
PROJECT_ROOT="$(pwd)"
NEXTCLOUD_INSTALL_DIR="/var/www/nextcloud"
NEXTCLOUD_DATA_DIR="/var/nextcloud"
CONFIG_DIR="${PROJECT_ROOT}/config"
LOG_DIR="${PROJECT_ROOT}/logs"
BACKUP_DIR="/var/backups/nextcloud"

# Web Server Configuration
WEB_SERVER="apache2"  # or "nginx"
WEB_SERVER_USER="www-data"
WEB_SERVER_GROUP="www-data"

# Database Configuration
DB_TYPE="mysql"  # or "pgsql"
DB_HOST="localhost"
DB_NAME="nextcloud"
DB_USER="nextcloud"
DB_PASS=""
DB_ROOT_PASS=""

# PHP Configuration
PHP_VERSION="8.2"
PHP_MEMORY_LIMIT="512M"
PHP_UPLOAD_MAX_FILESIZE="2G"
PHP_POST_MAX_SIZE="2G"

# Redis Configuration (for caching)
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""

# Backup Configuration
BACKUP_DIR="${PROJECT_ROOT}/backups"
BACKUP_RETENTION_DAYS="30"

# Logging Configuration
LOG_DIR="${PROJECT_ROOT}/logs"
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR

# Email Notifications (for alerts)
# SMTP_SERVER="smtp.example.com"
# SMTP_PORT="587"
# SMTP_USER="user@example.com"
# SMTP_PASSWORD="your-password"
# NOTIFICATION_EMAIL="admin@example.com"

# Security
ALLOWED_DOMAINS="example.com,cloud.example.com"
TRUSTED_PROXIES=""

# Let's Encrypt (for SSL)
LETSENCRYPT_EMAIL="admin@example.com"
DOMAIN_NAME="cloud.e-granary.com"
USE_LETSENCRYPT="true"

# SSL Certificate Paths (auto-configured)
SSL_CERT_DIR="/etc/letsencrypt/live/${DOMAIN_NAME}"
SSL_KEY="${SSL_CERT_DIR}/privkey.pem"
SSL_CERT="${SSL_CERT_DIR}/fullchain.pem"

# System Configuration
TIMEZONE="Africa/Nairobi"
LOCALE="en_US.UTF-8"

# Nextcloud Admin User
NEXTCLOUD_ADMIN_USER="admin"
NEXTCLOUD_ADMIN_PASSWORD=""  # Will be generated if empty

# Security
DEFAULT_UMASK="0027"
FILEPERMISSIONS="0640"
DIRPERMISSIONS="0750"

# Redis Configuration
REDIS_SOCKET="/var/run/redis/redis-server.sock"

# PHP Configuration (additional)
PHP_OPCACHE_ENABLE=1
PHP_OPCACHE_MEMORY_CONSUMPTION=128
PHP_OPCACHE_INTERNED_STRINGS_BUFFER=8
PHP_OPCACHE_MAX_ACCELERATED_FILES=10000
PHP_OPCACHE_REVALIDATE_FREQ=60
PHP_OPCACHE_FAST_SHUTDOWN=1

# Monitoring
MONITORING_ENABLED="true"
STATUS_UPDATE_INTERVAL="300"  # seconds
