# Nextcloud Installation Directory
NEXTCLOUD_INSTALL_DIR="/var/www/nextcloud"
NEXTCLOUD_DATA_DIR="/var/nextcloud-data"

# Web Server Configuration
WEB_SERVER="apache2"  # or "nginx"
WEB_SERVER_USER="www-data"
WEB_SERVER_GROUP="www-data"

# Database Configuration
DB_TYPE="mysql"  # or "pgsql"
DB_HOST="localhost"
DB_NAME="nextcloud"
DB_USER="nextcloud"
DB_PASS=""
DB_ROOT_PASS=""

# PHP Configuration
PHP_VERSION="8.2"
PHP_MEMORY_LIMIT="512M"
PHP_UPLOAD_MAX_FILESIZE="2G"
PHP_POST_MAX_SIZE="2G"

# Redis Configuration (for caching)
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""

# Backup Configuration
BACKUP_DIR="${PROJECT_ROOT}/backups"
BACKUP_RETENTION_DAYS="30"

# Logging Configuration
LOG_DIR="${PROJECT_ROOT}/logs"
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR

# Email Notifications (for alerts)
# SMTP_SERVER="smtp.example.com"
# SMTP_PORT="587"
# SMTP_USER="user@example.com"
# SMTP_PASSWORD="your-password"
# NOTIFICATION_EMAIL="admin@example.com"

# Security
ALLOWED_DOMAINS="example.com,cloud.example.com"
TRUSTED_PROXIES=""

# Let's Encrypt (for SSL)
# LETSENCRYPT_EMAIL="admin@example.com"
# USE_LETSENCRYPT="true"

# Monitoring
MONITORING_ENABLED="true"
STATUS_UPDATE_INTERVAL="300"  # seconds
